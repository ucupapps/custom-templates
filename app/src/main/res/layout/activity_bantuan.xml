<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
    android:background="@color/white"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:padding="10dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Butuh Bantuan"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="30sp"
           android:gravity="center"
           android:layout_marginBottom="40dp"
           android:text="Butuh Bantuan"/>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/txtpusatbantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/bantuan"
            android:background="@drawable/circle"/>
        <TextView
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:text="Pusat Bantuan"/>
        <ImageView
            android:id="@+id/arrow_poi"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:paddingTop="7dp"
            android:layout_gravity="center"
            android:paddingBottom="7dp"
            android:src="@drawable/arrow_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txtlayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/hubungi"
            android:background="@drawable/circle"/>
        <TextView
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:text="Hubungi Kami"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:paddingTop="7dp"
            android:layout_gravity="center"
            android:paddingBottom="7dp"
            android:src="@drawable/arrow_right"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txtlaporkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/laporkan"
            android:background="@drawable/circle"/>
        <TextView
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:text="Laporkan Masalah"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:paddingTop="7dp"
            android:layout_gravity="center"
            android:paddingBottom="7dp"
            android:src="@drawable/arrow_right"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
