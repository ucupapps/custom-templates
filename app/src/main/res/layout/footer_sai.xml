<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFECEBEB"
    android:layout_alignParentBottom="true"
    android:gravity="center" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:src="@drawable/sai_0" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:background="@color/white">

                    <TextView
                        android:id="@+id/txt_doa1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button2"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Doa Mendaki Bukit Safa"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txt_doa2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button2"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Doa Ketika Mendekati Bukit Safa atau Marwah"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txt_doa3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button2"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Doa di Antara Dua Pilar Hijau"
                        android:textColor="@color/white" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/menu_back"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center"
                android:clickable="false"
                android:orientation="vertical" >

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_green_white"
                    android:paddingTop="2dp"
                    android:src="@drawable/previous" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_below="@id/img_doa"
                    android:layout_centerInParent="true"
                    android:text="Selanjutnya"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_play"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_green_white"
                    android:paddingTop="2dp"
                    android:src="@drawable/play" />

                <TextView
                    android:id="@+id/txt_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_below="@id/img_doa"
                    android:layout_centerInParent="true"
                    android:text="Mulai"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_next"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center"
                android:clickable="false"
                android:orientation="vertical" >

                <ImageView

                    android:visibility="gone"
                    android:id="@+id/img_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_green_white"
                    android:paddingTop="2dp"
                    android:src="@drawable/next" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_below="@id/img_doa"
                    android:layout_centerInParent="true"
                    android:text="Selanjutnya"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>