<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:gravity="center" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <LinearLayout
                android:id="@+id/menu_panduan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_panduan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:src="@drawable/panduan" />

                <TextView
                    android:id="@+id/txt_panduan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@id/img_panduan"
                    android:layout_centerInParent="true"
                    android:text="PANDUAN"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_doa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_doa"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:src="@drawable/doa" />

                <TextView
                    android:id="@+id/txt_doa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@id/img_doa"
                    android:layout_centerInParent="true"
                    android:text="TITIPAN DO'A"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_emergency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:src="@drawable/emergency" />

                <TextView
                    android:id="@+id/txt_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@id/img_emergency"
                    android:layout_centerInParent="true"
                    android:text="EMERGENCY"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_inbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:src="@drawable/inbox" />

                <TextView
                    android:id="@+id/txt_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@id/img_inbox"
                    android:layout_centerInParent="true"
                    android:text="INBOX"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/txt_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@id/img_profile"
                    android:layout_centerInParent="true"
                    android:text="PROFILE"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

        </TableRow>

            <!--<View android:layout_width="match_parent"-->
                <!--android:layout_height="3dp"-->
                <!--android:background="#cccaca" />-->

    </TableLayout>
</RelativeLayout>

